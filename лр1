#include <stdio.h>
#include <math.h> //для функції fabs()
int main() 
{
    float a, b;

    //введення значень а та b
    printf("Enter the value of a: ");
    scanf("%f", &a);
    printf("Enter the value of b: ");
    scanf("%f", &b);

    //обчислення х
    float x = (float)((a+b-fabs(a-b))/4.0);
    
    //обчислення у
    float y = 3*x+5;
    //виведення результату
    printf("The value of y is %.2f\n", y);
    return 0;
}
